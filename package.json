{
  "private": true,
  "name": "swag",
  "scripts": {
    "lint": "eslint .",
    "build": "ultra -r build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@ianwalter/eslint-config-react": "^4.1.0",
    "@ianwalter/renovate-config": "^1.4.5",
    "ultra-runner": "^3.10.5"
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter/react"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "react/prop-types": 0
    }
  },
  "eslintIgnore": [
    "dist"
  ]
}
